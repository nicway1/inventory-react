window.trackSecondaryPackage = function() {
    const trackingNumber = '{{ ticket.shipping_tracking_2 }}';
    const carrier = '{{ ticket.shipping_carrier_2 }}';
    
    if (!trackingNumber) {
        alert('No tracking number available');
        return;
    }
    
    let trackingUrl;
    
    // Determine tracking URL based on carrier
    switch (carrier) {
        case 'singpost':
            trackingUrl = `https://www.singpost.com/track-items?track_number=${trackingNumber}`;
            break;
        case 'dhl':
            trackingUrl = `https://www.dhl.com/en/express/tracking.html?AWB=${trackingNumber}`;
            break;
        case 'ups':
            trackingUrl = `https://www.ups.com/track?loc=en_US&tracknum=${trackingNumber}`;
            break;
        case 'bluedart':
            trackingUrl = `https://www.bluedart.com/tracking-details?trackfor=${trackingNumber}`;
            break;
        case 'dtdc':
            trackingUrl = `https://tracking.dtdc.com/ctbs-tracking/customerInterface.tr?submitName=showCITrackingDetails&cnNo=${trackingNumber}`;
            break;
        default:
            // Default to a general tracking site for auto or unknown carriers
            trackingUrl = `https://www.ship24.com/tracking?p=${trackingNumber}`;
            break;
    }
    
    // Open tracking URL in a new window
    window.open(trackingUrl, '_blank');
};

window.submitAddShipmentForm = function() {
    const form = document.getElementById('addShipmentForm');
    const trackingNumber = form.elements['tracking_number'].value;
    const carrier = form.elements['carrier'].value;
    
    if (!trackingNumber) {
        alert('Please enter a tracking number');
        return;
    }
    
    // Show loading state
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-3" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Saving...';
    
    // Get CSRF token from meta tag
    const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    
    // Make AJAX request to save the additional tracking number
    fetch(`/tickets/{{ ticket.id }}/add_secondary_shipment`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRFToken': csrfToken
        },
        body: JSON.stringify({
            tracking_number: trackingNumber,
            carrier: carrier
        })
    })
    .then(response => {
        if (!response.ok) {
            if (response.status === 400) {
                return response.json().then(data => {
                    throw new Error(data.message || 'CSRF validation failed');
                });
            }
            throw new Error('Network response was not ok, status: ' + response.status);
        }
        return response.json();
    })
    .then(data => {
        if (data.success) {
            // Hide modal
            hideAddShipmentModal();
            
            // Refresh the page to show the new shipment
            window.location.reload();
        } else {
            console.error('API Error:', data.message);
            alert('Error: ' + (data.message || 'Failed to add shipment'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while saving the shipment');
    })
    .finally(() => {
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
    });
};

