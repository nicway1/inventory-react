window.refreshSecondaryTracking = function() {
    // Show loading state
    document.getElementById('secondaryTrackingInfo').innerHTML = '';
    document.getElementById('secondaryTrackingLoading').classList.remove('hidden');
    document.getElementById('secondaryTrackingError').classList.add('hidden');
    
    // Make API call to refresh tracking
    fetch(`/tickets/category/checkout_main/{{ ticket.id }}/track_secondary`)
        .then(response => response.json())
        .then(data => {
            // Hide loading state
            document.getElementById('secondaryTrackingLoading').classList.add('hidden');
            
            if (data.success) {
                // Display tracking information
                const trackingInfo = data.tracking_info || [];
                const trackingContainer = document.getElementById('secondaryTrackingInfo');
                
                if (trackingInfo.length === 0) {
                    trackingContainer.innerHTML = `
                        <div class="p-4 text-center text-gray-500">
                            ${data.shipping_status === "Not found" ? 
                            'This tracking number was not recognized by the carrier. Please verify the tracking number and carrier selection.' : 
                            'No tracking information available yet. The carrier may still be processing this shipment.'}
                        </div>
                    `;
                } else {
                    trackingContainer.innerHTML = '';
                    trackingInfo.forEach(event => {
                        trackingContainer.innerHTML += `
                            <div class="p-4 flex items-center">
                                <div class="flex-shrink-0 mr-4">
                                    <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                                        <svg class="h-4 w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div>
                                    <p class="font-medium">${event.status}</p>
                                    <p class="text-sm text-gray-600">${event.location}</p>
                                </div>
                                <div class="ml-auto text-right">
                                    <p class="text-sm text-gray-600">${event.date}</p>
                                </div>
                            </div>
                        `;
                    });
                }
                
                // Reload page to update status badge if status has changed
                if (data.shipping_status && data.shipping_status !== '{{ ticket.shipping_status_2 }}') {
                    window.location.reload();
                }
            } else {
                // Show error state
                document.getElementById('secondaryTrackingError').classList.remove('hidden');
                document.getElementById('secondaryTrackingError').querySelector('p span').textContent = data.error || 'An unknown error occurred';
            }
        })
        .catch(error => {
            // Hide loading state and show error
            document.getElementById('secondaryTrackingLoading').classList.add('hidden');
            document.getElementById('secondaryTrackingError').classList.remove('hidden');
            document.getElementById('secondaryTrackingError').querySelector('p span').textContent = error.message || 'Network error';
            console.error('Error:', error);
        });
};

