{% block scripts %}
<script>
// Use strict mode and self-executing function to avoid global scope pollution
(function() {
    'use strict';
    
    // Store data from template
    // Using a separate variable to hold the JSON data to avoid linter errors with template syntax
    var userDataJson = '{{ users|tojson|safe }}';
    var userData;
    try {
        userData = JSON.parse(userDataJson.replace(/&quot;/g, '"'));
    } catch (e) {
        userData = [];
        console.error('Error parsing user data:', e);
    }
    
    var currentMentionStart = -1;
    var selectedIndex = -1;
    var textarea;
    var suggestions;

    // Initialize after DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        textarea = document.getElementById('content');
        suggestions = document.getElementById('mentionSuggestions');
        
        if (textarea && suggestions) {
            textarea.addEventListener('input', handleInput);
            textarea.addEventListener('keydown', handleKeydown);
        }
        
        // Set up toggle function for forms
        window.toggleUpdateForm = function() {
            var form = document.getElementById('updateForm');
            if (form) form.classList.toggle('hidden');
        };
        
        window.toggleAssignForm = function() {
            var form = document.getElementById('assignForm');
            if (form) form.classList.toggle('hidden');
        };
        
        window.showAssetForm = function(type) {
            var techForm = document.getElementById('techAssetForm');
            var accessoryForm = document.getElementById('accessoriesForm');
            
            if (techForm && accessoryForm) {
                if (type === 'tech') {
                    techForm.classList.remove('hidden');
                    accessoryForm.classList.add('hidden');
                } else {
                    techForm.classList.add('hidden');
                    accessoryForm.classList.remove('hidden');
                }
            }
        };

        // Initialize tabs - show default tab
        showTab('details');
        
        // Initialize 17TRACK if tracking container exists
        var trackingContainer = document.getElementById('YQContainer');
        if (trackingContainer && typeof YQV5 !== 'undefined') {
            try {
                YQV5.trackSingle({
                    YQ_ContainerId: "YQContainer",
                    YQ_Height: 560,
                    YQ_Fc: "0",
                    YQ_Lang: "en",
                    YQ_Num: trackingContainer.dataset.number || ''
                });
            } catch (e) {
                console.error('Error initializing tracking widget:', e);
            }
        }
        
        // Initialize Add Shipment form if it exists
        const addShipmentForm = document.getElementById('addShipmentForm');
        if (addShipmentForm) {
            console.log('Setting up addShipmentForm event listener');
            addShipmentForm.addEventListener('submit', function(e) {
                e.preventDefault();
                console.log('Form submitted, calling submitAddShipmentForm()');
                submitAddShipmentForm();
            });
            
            // Also add click event to the submit button as a backup
            const submitButton = document.querySelector('button[form="addShipmentForm"]');
            if (submitButton) {
                submitButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('Submit button clicked, calling submitAddShipmentForm()');
                    submitAddShipmentForm();
                });
            }
        } else {
